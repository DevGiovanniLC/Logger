{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "declaration": true,
        "skipLibCheck": true,
        "baseUrl": "./src",
        "types": [
            "node",
            "vitest"
        ],
        "paths": {
            "@core/*": [
                "core/*"
            ],
            "@models/*": [
                "models/*"
            ],
            "@utils/*": [
                "utils/*"
            ],
            "@helpers/*": [
                "helpers/*"
            ],
            "@errors/*": [
                "errors/*"
            ]
        }
    }
}
