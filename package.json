{
    "private": true,
    "name": "giodev-logger-monorepo",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "pack": "npm run build && npm pack -w @giodev/logger",
        "build": "npm -w @giodev/logger run build",
        "clean": "rimraf packages/**/dist",
        "start": "npm -w playground run start",
        "update": "npm -w playground run update"
    },
    "devDependencies": {
        "@types/node": "^24.9.2",
        "rimraf": "^6.0.0",
        "tsup": "^8.5.0",
        "typescript": "^5.9.3"
    }
}
